    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label" : "typescript",
            "command": "./node_modules/.bin/tsc --watch -p .",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc-watch"
            ]
        }
    ]
}